<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView android:clickable="true"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="0dp"
    xmlns:android="http://schemas.android.com/apk/res/android">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="10dp">

        <RelativeLayout
            android:id="@+id/cardSen"
            android:visibility="visible"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="left">
            <LinearLayout
                android:layout_marginStart="0dp"
                android:layout_alignParentLeft="true"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="10dp"
                android:layout_centerInParent="true"
                android:gravity="left">
            <TextView
                android:layout_alignParentLeft="true"
                android:id="@+id/tvMonth"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:text="September 2019"
                android:padding="5dp"/>
            <TextView
                android:layout_below="@id/tvMonth"
                android:id="@+id/tvTentSl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="10dp"
                android:text="111111111111"/>
            </LinearLayout>

            <LinearLayout
                android:layout_marginStart="100dp"
                android:layout_alignParentLeft="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="10dp"
                android:gravity="left">
            <TextView
                android:id="@+id/tvName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:layout_marginTop="10dp"
                android:text="ব্যাচেলর"/>
            <TextView
                android:id="@+id/tvTentStart"
                android:visibility="visible"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="normal"
                android:layout_marginTop="3dp"
                android:text="000"/>

                <TextView
                    android:id="@+id/tvTentID"
                    android:visibility="visible"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="normal"
                    android:layout_marginTop="3dp"
                    android:text="000"/>

            <TextView
                android:id="@+id/tvImg"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="normal"
                android:layout_marginTop="3dp"
                android:text="000"/>


            </LinearLayout>

            <LinearLayout
                android:layout_marginStart="0dp"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="10dp"
                android:layout_centerInParent="true"
                android:gravity="center_horizontal">

            <TextView
                android:id="@+id/tvAmount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="10000/-"
                android:textSize="20dp"
                android:textColor="@color/Black"

                />

                <TextView
                    android:layout_below="@id/tvAmount"
                    android:id="@+id/tvRef"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12dp"
                    android:text="111111111111"/>



</LinearLayout>

    </RelativeLayout>


</LinearLayout>
</androidx.cardview.widget.CardView>