<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:design="http://schemas.android.com/tools"
    android:id="@+id/drawer_design_support_layout"
    android:layout_width="match_parent"
    android:background="#deebec"
    android:layout_height="match_parent">

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:id="@+id/rootLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:expandedTitleMarginStart="60dp">

        <com.google.android.material.appbar.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:background="#e93a26"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

            <com.google.android.material.appbar.CollapsingToolbarLayout
                android:id="@+id/collapsing_toolbar_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:layout_scrollFlags="scroll|exitUntilCollapsed">

                    <ImageView
                        android:layout_marginTop="70dp"
                        android:layout_width="120dp"
                        android:layout_height="120dp"
                        android:scaleType="centerCrop"
                        android:id="@+id/imageView"
                        android:layout_gravity="center_horizontal"
                        android:src="@drawable/ic_launcher_round"
                        android:background="@drawable/profile_circular_border_imageview22"
                        android:padding="15dp"
                        android:layout_centerHorizontal="true"

                        />
                    <ImageButton
                        android:id="@+id/pickPhoto"
                        android:scaleType="centerCrop"
                        android:layout_width="46dp"
                        android:layout_height="46dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="-15dp"
                        android:background="@null"
                        android:src="@drawable/ic_add_a_photo_black_24dp"

                        />

                    <EditText

                        android:id="@+id/tvuName"
                        android:layout_marginTop="190dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textAlignment="center"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:textColor="#ab0f0f"
                        android:textSize="24dp"
                        android:hint="Your Name"

                        />

                    <TextView
                        android:layout_marginTop="240dp"
                        android:id="@+id/tvsid"
                        android:textAlignment="center"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tvuName"
                        android:textColor="#ab0f0f"
                        android:hint="Your ID"

                        />

                    <include
                        android:id="@+id/toolbar"
                        layout="@layout/toolbar_user" />

                </com.google.android.material.appbar.CollapsingToolbarLayout>

            </com.google.android.material.appbar.AppBarLayout>

            <androidx.core.widget.NestedScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fillViewport="true"
                android:layout_marginTop="-45dp"
                android:layout_marginBottom="60dp"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                app:layout_behavior="@string/appbar_scrolling_view_behavior">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"

                    >




                    <androidx.cardview.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
                        xmlns:android="http://schemas.android.com/apk/res/android"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:elevation="16dp"
                        android:layout_marginTop="30dp"
                        android:padding="30dp"
                        card_view:cardBackgroundColor="#f9e5e5"
                        android:visibility="visible"
                        android:layout_marginBottom="8dp"
                        card_view:cardCornerRadius="5dp">


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:padding="20dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:layout_gravity="center"
                                android:layout_marginTop="15dp">
                                <LinearLayout
                                    android:orientation="horizontal"
                                    android:paddingLeft="25dp"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content">
                                    <ImageView
                                        android:layout_width="36dp"
                                        android:layout_height="36dp"
                                        android:src="@drawable/men_mail_orange"/>
                                    <EditText
                                        android:textSize="18dp"
                                        android:id="@+id/uEmail"
                                        android:textStyle="normal"
                                        android:layout_gravity="center_vertical"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:paddingLeft="20dp"
                                        android:inputType="textEmailAddress"
                                        android:hint="Your Email"
                                        />
                                </LinearLayout>
                                <LinearLayout
                                    android:layout_marginTop="25dp"
                                    android:orientation="horizontal"
                                    android:paddingLeft="25dp"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content">
                                    <ImageView
                                        android:layout_width="36dp"
                                        android:layout_height="36dp"
                                        android:src="@drawable/ic_phone_black_24dp"/>
                                    <TextView
                                        android:textSize="18dp"
                                        android:textStyle="normal"
                                        android:id="@+id/uMobile"
                                        android:layout_gravity="center_vertical"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:paddingLeft="20dp"
                                        android:hint="Mobile Number"
                                        />
                                </LinearLayout>

                                <LinearLayout
                                    android:layout_marginTop="25dp"
                                    android:orientation="horizontal"
                                    android:paddingLeft="25dp"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content">
                                    <ImageView
                                        android:layout_width="36dp"
                                        android:layout_height="36dp"
                                        android:tint="#071e94"
                                        android:src="@drawable/icon_profession"/>
                                    <EditText
                                        android:textSize="18dp"

                                        android:textStyle="normal"
                                        android:id="@+id/uProfession"
                                        android:layout_gravity="center_vertical"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:paddingLeft="20dp"
                                        android:hint="Your Profession"
                                        />
                                </LinearLayout>


                                <LinearLayout
                                    android:layout_marginTop="25dp"
                                    android:orientation="horizontal"
                                    android:paddingLeft="25dp"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content">
                                    <ImageView
                                        android:layout_width="36dp"
                                        android:layout_height="36dp"
                                        android:tint="#071e94"
                                        android:src="@drawable/icon_company"/>
                                    <EditText
                                        android:textSize="18dp"

                                        android:textStyle="normal"
                                        android:id="@+id/uCompany"
                                        android:layout_gravity="center_vertical"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:paddingLeft="20dp"
                                        android:hint="Company/Institution"
                                        />
                                </LinearLayout>

                                <LinearLayout
                                    android:layout_marginTop="25dp"
                                    android:orientation="horizontal"
                                    android:paddingLeft="25dp"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content">
                                    <ImageView
                                        android:layout_width="36dp"
                                        android:layout_height="36dp"
                                        android:tint="#071e94"
                                        android:src="@drawable/icon_nationality"/>
                                    <EditText
                                        android:textSize="18dp"

                                        android:textStyle="normal"
                                        android:id="@+id/uNationality"
                                        android:layout_gravity="center_vertical"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:paddingLeft="20dp"
                                        android:hint="Nationality"
                                        />
                                </LinearLayout>

                                <LinearLayout
                                    android:layout_marginTop="25dp"
                                    android:orientation="horizontal"
                                    android:paddingLeft="25dp"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content">
                                    <ImageView
                                        android:layout_width="36dp"
                                        android:layout_height="36dp"
                                        android:tint="#071e94"
                                        android:src="@drawable/icon_passport"/>
                                    <EditText
                                        android:textSize="18dp"
                                        android:hint="@string/NID"
                                        android:textStyle="normal"
                                        android:id="@+id/uNID"
                                        android:layout_gravity="center_vertical"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:paddingLeft="20dp"
                                       />
                                </LinearLayout>


                                <LinearLayout
                                    android:layout_marginTop="25dp"
                                    android:orientation="horizontal"
                                    android:paddingLeft="25dp"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content">
                                    <ImageView
                                        android:layout_width="36dp"
                                        android:layout_height="36dp"
                                        android:tint="#071e94"
                                        android:src="@android:drawable/ic_menu_directions"/>
                                    <EditText
                                        android:textSize="18dp"

                                        android:textStyle="normal"
                                        android:id="@+id/uLocation"
                                        android:layout_gravity="center_vertical"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:paddingLeft="20dp"
                                        android:hint="Current Thana/PS"
                                        />
                                </LinearLayout>

                                <LinearLayout
                                    android:layout_marginTop="25dp"
                                    android:orientation="horizontal"
                                    android:paddingLeft="25dp"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content">
                                    <ImageView
                                        android:layout_width="36dp"
                                        android:layout_height="36dp"
                                        android:tint="#071e94"
                                        android:src="@android:drawable/ic_menu_directions"/>
                                    <EditText
                                        android:textSize="18dp"

                                        android:textStyle="normal"
                                        android:id="@+id/uDistrict"
                                        android:layout_gravity="center_vertical"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:paddingLeft="20dp"
                                        android:hint="Current District"
                                        />
                                </LinearLayout>
                                <LinearLayout
                                    android:layout_marginTop="25dp"
                                    android:orientation="horizontal"
                                    android:paddingLeft="25dp"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content">
                                    <ImageView
                                        android:layout_width="36dp"
                                        android:layout_height="36dp"
                                        android:src="@drawable/ic_location_city_black_24dp"/>
                                    <EditText
                                        android:textStyle="normal"
                                        android:id="@+id/uAddress"
                                        android:textSize="18dp"
                                        android:layout_gravity="center_vertical"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:paddingLeft="20dp"
                                        android:hint="Current Address"                                        android:singleLine="false"
                                        />
                                </LinearLayout>
                            </LinearLayout>


                        </LinearLayout>

                    </androidx.cardview.widget.CardView>
                    <androidx.cardview.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
                        xmlns:android="http://schemas.android.com/apk/res/android"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:elevation="16dp"
                        android:padding="30dp"
                        android:layout_marginBottom="8dp"
                        card_view:cardCornerRadius="5dp">

                        <RelativeLayout
                            android:id="@+id/custom4"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:padding="20dp">

                            <Button
                                android:textColor="#fff"
                                android:background="@drawable/buttonstyle"
                                android:id="@+id/btnConfirm"
                                android:layout_gravity="center_horizontal"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Update Info"
                                android:layout_centerVertical="true"
                                android:layout_centerHorizontal="true" />
                        </RelativeLayout>

                    </androidx.cardview.widget.CardView>



                </LinearLayout>



            </androidx.core.widget.NestedScrollView>




        </androidx.coordinatorlayout.widget.CoordinatorLayout>



    </androidx.drawerlayout.widget.DrawerLayout>
