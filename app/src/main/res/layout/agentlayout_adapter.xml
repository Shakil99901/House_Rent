<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/White"
    android:layout_margin="4dp"


    >
    <!--
    items for a single row of RecyclerView
    -->
    <androidx.cardview.widget.CardView
        android:foreground="?android:attr/selectableItemBackground"
        android:clickable="true"
        android:id="@+id/bankcardId"

        android:layout_gravity="center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            >

        <LinearLayout
            android:id="@+id/lCard"
            android:paddingRight="10dp"
            android:paddingTop="10dp"
            android:paddingLeft="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="3"
            android:gravity="left">
            <TextView
                android:id="@+id/bottomView"
                android:visibility="visible"
                android:layout_width="3dp"
                android:layout_height="75dp"
                android:background="#d90d36"
                android:layout_marginTop="0dp"
                android:layout_marginLeft="0dp"
                android:layout_marginRight="-1dp"

                />
            <ImageView
                android:id="@+id/ivPic"
                android:layout_width="100dp"
                android:layout_height="75dp"
                android:layout_marginRight="10dp"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_launcher_e"
                android:padding="0dp"/>

            <LinearLayout
                android:id="@+id/lCardc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="left">
                <TextView
                    android:id="@+id/tvHeadline"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="normal"
                    android:textSize="14dp"
                    android:layout_marginTop="4dp"
                    android:text="rent home"/>
                <TextView
                    android:id="@+id/tvRent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="normal"
                    android:textSize="18dp"
                    android:textColor="#047806"
                    android:layout_marginTop="4dp"
                    android:text="5000/-"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/lightgray"
                    android:layout_margin="1dp"/>
                <TextView
                    android:id="@+id/tvLocation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Dhaka"
                    android:padding="0dp"
                    android:textSize="14dp"
                    android:textColor="@android:color/holo_red_dark"/>


            </LinearLayout>

            <LinearLayout
                android:clipToPadding="false"
                android:gravity="center"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <Button
                    android:id="@+id/btnEdit"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="right"
                    android:visibility="visible"
                    android:background="@drawable/icon_edit"
                    android:textColor="#FFF7F4F4"
                    android:textAlignment="center"
                    android:padding="4dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    />

                <Button
                    android:id="@+id/btnDetails"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="right"
                    android:layout_marginLeft="1dp"
                    android:gravity="center_vertical"
                    android:textColor="#f5f2f2"
                    android:background="@drawable/icon_details"
                    android:visibility="visible"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="5dp"                    />


            </LinearLayout>



            <RelativeLayout
                android:id="@+id/lCard3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:gravity="right"
                android:orientation="horizontal">




                <LinearLayout
                    android:id="@+id/lCard4"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:gravity="right">



                </LinearLayout>



            </RelativeLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="shop name"
                android:visibility="gone"
                />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:layout_marginTop="5dp"
            android:layout_gravity="left"
            android:background="@color/Orange"
            >
            <TextView
                android:id="@+id/tvBed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="dd"
                android:textSize="15dp"
                android:layout_marginRight="4dp"
                android:visibility="gone"
                />
            <TextView
                android:id="@+id/tvBath"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="bath"
                android:textSize="15dp"
                android:layout_marginLeft="4dp"
                android:visibility="gone"
                />

            <Button
                android:id="@+id/btnRentState"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:textSize="15dp"
                android:layout_marginLeft="15dp"
                android:visibility="visible"
                android:background="@drawable/ic_visibility_off"
                />
            <Button
                android:layout_centerInParent="true"
                android:id="@+id/btnAdState"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Published"
                android:textSize="15dp"
                android:layout_marginLeft="4dp"
                android:visibility="visible"
                android:background="@drawable/button_border"
                />

            <Button
                android:id="@+id/btnDelete"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="right"
                android:layout_marginRight="10dp"

                android:visibility="visible"
                android:background="@drawable/icon_delete"
                android:textColor="#FFF7F4F4"
                android:textAlignment="center"
                android:padding="4dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:layout_alignParentRight="true"/>







        </RelativeLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>



</LinearLayout>