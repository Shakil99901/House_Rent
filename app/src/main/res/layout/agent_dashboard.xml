<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:design="http://schemas.android.com/tools"
    android:id="@+id/drawer_design_support_layout"
    android:layout_width="match_parent"
    android:background="#deebec"
    android:layout_height="match_parent">

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:id="@+id/rootLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:expandedTitleMarginStart="60dp">

        <com.google.android.material.appbar.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="340dp"
            android:background="#e93a26"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

            <com.google.android.material.appbar.CollapsingToolbarLayout
                android:id="@+id/collapsing_toolbar_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:layout_scrollFlags="scroll|exitUntilCollapsed">



                <ImageView
                    android:layout_marginTop="90dp"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:scaleType="centerCrop"
                    android:id="@+id/ImageProfile"
                    android:layout_gravity="center_horizontal"
                    android:src="@drawable/ic_launcher_round"
                    android:background="@drawable/profile_circular_border_imageview22"
                    android:padding="15dp"
                    android:layout_centerHorizontal="true"

                    />

                <TextView

                    android:id="@+id/tvuName"
                    android:layout_marginTop="210dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:hint="###################"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textColor="#faf8f8"
                    android:textSize="24dp"
                    />

                <TextView
                    android:layout_marginTop="240dp"
                    android:id="@+id/tvsid"
                    android:textAlignment="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="###################"
                    android:layout_below="@+id/tvuName"
                    />

                <include
                    android:id="@+id/toolbar"
                    layout="@layout/toolbar_user"
 />

            </com.google.android.material.appbar.CollapsingToolbarLayout>

        </com.google.android.material.appbar.AppBarLayout>

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true"
            android:layout_marginTop="-45dp"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"

                >




                    <LinearLayout
                        android:id="@+id/custom_dialog_layout_design_user_input"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="10dp">




                            <LinearLayout
                                android:clipToPadding="false"
                                android:gravity="center"
                                android:layout_marginTop="-10dp"
                                android:orientation="horizontal"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">
                                <androidx.cardview.widget.CardView
                                    android:clickable="true"
                                    android:layout_width="100dp"
                                    android:layout_height="80dp"
                                    android:layout_margin="10dp">
                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:orientation="vertical"
                                        android:gravity="center">

                                        <TextView
                                            android:id="@+id/tvAdL"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:textStyle="bold"
                                            android:layout_marginTop="10dp"
                                            android:textSize="25dp"
                                            android:text="6"/>

                                        <TextView
                                            android:id="@+id/tvAdL2"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:textStyle="bold"
                                            android:layout_marginTop="10dp"
                                            android:text="ভাড়া"/>
                                        <View
                                            android:layout_width="match_parent"
                                            android:layout_height="1dp"
                                            android:background="@color/lightgray"
                                            android:layout_margin="10dp"/>


                                    </LinearLayout>
                                </androidx.cardview.widget.CardView>
                                <androidx.cardview.widget.CardView
                                    android:clickable="true"
                                    android:layout_width="100dp"
                                    android:layout_height="80dp"
                                    android:layout_margin="10dp">
                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:orientation="vertical"
                                        android:gravity="center">

                                        <TextView
                                            android:id="@+id/tvsellAd"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:textStyle="bold"
                                            android:layout_marginTop="10dp"
                                            android:text="2"
                                            android:textSize="25dp"
                                            />

                                        <TextView
                                            android:id="@+id/sellAd"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:textStyle="bold"
                                            android:layout_marginTop="10dp"
                                            android:text="বিক্রয়"/>
                                        <View
                                            android:layout_width="match_parent"
                                            android:layout_height="1dp"
                                            android:background="@color/lightgray"
                                            android:layout_margin="10dp"/>


                                    </LinearLayout>
                                </androidx.cardview.widget.CardView>

                            </LinearLayout>




                    </LinearLayout>



                    <LinearLayout
                        android:clipToPadding="false"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <androidx.cardview.widget.CardView
                            android:clickable="true"
                            android:layout_width="80dp"
                            android:layout_height="100dp"
                            android:layout_margin="5dp">
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="vertical"
                                android:gravity="center">

                                <ImageView
                                    android:id="@+id/ivmessage"
                                    android:layout_width="54dp"
                                    android:layout_height="54dp"
                                    android:background="@drawable/cerclebackgroundgreen"
                                    android:src="@drawable/men_email"
                                    android:padding="10dp"/>
                                <TextView
                                    android:id="@+id/tvMessage"
                                    android:layout_marginBottom="35dp"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:background="@drawable/profile_circular_border_imageview2"
                                    android:text=""
                                    android:textColor="#f9f4f3"
                                    android:padding="5dp"
                                    android:layout_marginTop="-60dp"
                                    android:layout_marginRight="-15dp"
                                    android:visibility="gone"
                                    />

                                <TextView
                                    android:id="@+id/tvMessageAd"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Message"
                                    />

                            </LinearLayout>
                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:clickable="true"
                            android:layout_width="80dp"
                            android:layout_height="100dp"
                            android:layout_margin="5dp">
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="vertical"
                                android:gravity="center">

                                <ImageView
                                    android:id="@+id/ivnewrent"
                                    android:layout_width="54dp"
                                    android:layout_height="54dp"
                                    android:background="@drawable/cerclebackgroundpink"
                                    android:src="@drawable/men_post_ad"
                                    android:padding="10dp"/>

                                <TextView
                                    android:id="@+id/tvNewRent"
                                    android:textAlignment="center"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="New Post"
                                    />

                            </LinearLayout>
                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:clickable="true"
                            android:layout_width="80dp"
                            android:layout_height="100dp"
                            android:layout_margin="5dp">
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="vertical"
                                android:gravity="center">

                                <ImageView
                                    android:id="@+id/ivearn"
                                    android:layout_width="54dp"
                                    android:layout_height="54dp"
                                    android:background="@drawable/cerclebackgroundgreenoriginal"
                                    android:src="@drawable/ic_earn_point"
                                    android:padding="10dp"/>

                                <TextView
                                    android:id="@+id/tvEarn"
                                    android:textAlignment="center"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Earn Point"
                                    />

                            </LinearLayout>
                        </androidx.cardview.widget.CardView>

                    </LinearLayout>

                <LinearLayout
                    android:clipToPadding="false"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <androidx.cardview.widget.CardView
                        android:clickable="true"
                        android:layout_width="80dp"
                        android:layout_height="100dp"
                        android:layout_margin="5dp">
                        android:layout_margin="5dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:gravity="center">

                            <ImageView
                                android:id="@+id/ivNotice"
                                android:layout_width="54dp"
                                android:layout_height="54dp"
                                android:background="@drawable/cerclebackgroundexplore"
                                android:src="@drawable/men_notice"
                                android:padding="10dp"/>
                            <TextView
                                android:id="@+id/tvNotice"
                                android:layout_marginBottom="35dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="@drawable/profile_circular_border_imageview2"
                                android:text=""
                                android:textColor="#f9f4f3"
                                android:padding="5dp"
                                android:layout_marginTop="-60dp"
                                android:layout_marginRight="-15dp"
                                android:visibility="gone"
                                />

                            <TextView
                                android:id="@+id/tvNoticeAd"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Request"
                                />

                        </LinearLayout>
                    </androidx.cardview.widget.CardView>


                    <androidx.cardview.widget.CardView
                        android:clickable="true"
                        android:layout_width="80dp"
                        android:layout_height="100dp"
                        android:layout_margin="5dp">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:gravity="center">

                            <ImageView
                                android:id="@+id/ivBill"
                                android:layout_width="54dp"
                                android:layout_height="54dp"
                                android:background="@drawable/cerclebackgroundblue"
                                android:src="@drawable/ic_attach_money_black_24dp"
                                android:padding="10dp"/>

                            <TextView
                                android:id="@+id/tvBill"
                                android:textAlignment="center"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Bill"
                                />

                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:clickable="true"
                            android:layout_width="80dp"
                            android:layout_height="100dp"
                            android:layout_margin="5dp">
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="vertical"
                                android:gravity="center">

                                <ImageView
                                    android:id="@+id/ivrent"
                                    android:layout_width="54dp"
                                    android:layout_height="54dp"
                                    android:background="@drawable/cerclebackgroundred"
                                    android:src="@drawable/men_rent"
                                    android:padding="10dp"/>
                                <TextView
                                    android:id="@+id/tvRentA"
                                    android:layout_marginBottom="35dp"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:background="@drawable/profile_circular_border_imageview"
                                    android:text="16"
                                    android:textColor="#f9f4f3"
                                    android:padding="5dp"
                                    android:layout_marginTop="-60dp"
                                    android:layout_marginRight="-25dp"
                                    android:visibility="gone"
                                    />

                                <TextView
                                    android:id="@+id/tvRentAd"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="rent add"
                                    />

                            </LinearLayout>
                        </androidx.cardview.widget.CardView>



                    </LinearLayout>

                <LinearLayout
                    android:clipToPadding="false"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="5dp"
                    >

                    <androidx.cardview.widget.CardView
                        android:clickable="true"
                        android:layout_width="80dp"
                        android:layout_height="100dp"
                        android:layout_margin="5dp">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:gravity="center">

                            <ImageView
                                android:id="@+id/ivprofile"
                                android:layout_width="54dp"
                                android:layout_height="54dp"
                                android:background="@drawable/cerclebackgroundgreen"
                                android:src="@drawable/ic_launcher_round"

                                android:padding="0dp"/>

                            <TextView
                                android:id="@+id/tvProfile"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Profile"
                                />

                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:clickable="true"
                        android:layout_width="80dp"
                        android:layout_height="100dp"
                        android:layout_margin="5dp">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:gravity="center">

                            <ImageView
                                android:id="@+id/ivsearch"
                                android:layout_width="54dp"
                                android:layout_height="54dp"
                                android:background="@drawable/cerclebackgroundmerun"
                                android:src="@drawable/search"
                                android:padding="10dp"/>

                            <TextView
                                android:id="@+id/tvSearch"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Search"
                                />

                        </LinearLayout>
                    </androidx.cardview.widget.CardView>
                    <androidx.cardview.widget.CardView
                        android:clickable="true"
                        android:layout_width="80dp"
                        android:layout_height="100dp"
                        android:layout_margin="5dp">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:gravity="center">

                            <ImageView
                                android:id="@+id/ivverify"
                                android:layout_width="54dp"
                                android:layout_height="54dp"
                                android:background="@drawable/cerclebackgroundblue"
                                android:src="@drawable/men_verify"
                                android:padding="10dp"/>

                            <TextView
                                android:id="@+id/tvVerify"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="verify"
                                />

                        </LinearLayout>
                    </androidx.cardview.widget.CardView>








                </LinearLayout>



                <LinearLayout
                    android:clipToPadding="false"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="60dp"
                    >



                    <androidx.cardview.widget.CardView
                        android:clickable="true"
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:layout_margin="10dp">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:gravity="center">

                            <TextView
                                android:id="@+id/tvLogout"
                                android:drawableTop="@drawable/ic_exit_to_app"
                                android:background="@color/White"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:paddingLeft="10dp"
                                android:textAlignment="center"
                                android:text="@string/Logout"
                                android:textColor="#231F20"
                                android:textSize="20dp"
                                android:textStyle="normal" />


                        </LinearLayout>
                    </androidx.cardview.widget.CardView>






                </LinearLayout>

            </LinearLayout>



        </androidx.core.widget.NestedScrollView>




    </androidx.coordinatorlayout.widget.CoordinatorLayout>



</androidx.drawerlayout.widget.DrawerLayout>