<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:design="http://schemas.android.com/tools"
    android:id="@+id/drawer_design_support_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    >

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:id="@+id/rootLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:expandedTitleMarginStart="60dp">

        <com.google.android.material.appbar.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:background="#dc3f0b"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

            <com.google.android.material.appbar.CollapsingToolbarLayout
                android:id="@+id/collapsing_toolbar_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fitsSystemWindows="true"
                app:contentScrim="#d7190f"
                app:expandedTitleTextAppearance="@android:color/transparent"
                app:layout_scrollFlags="scroll|exitUntilCollapsed"
                >



                <RelativeLayout
                    android:layout_width="155dp"
                    android:layout_height="160dp"
                    android:layout_gravity="center_horizontal"
                    >

                    <ImageView
                        android:id="@+id/imageView"
                        android:layout_width="match_parent"
                        android:layout_height="93dp"
                        android:layout_centerHorizontal="true"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="0dp"
                        android:padding="1dp"
                        android:scaleType="centerCrop"

                        />

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_centerVertical="true"
    android:layout_centerInParent="true"
    android:padding="22dp"
    >

    <Button
        android:id="@+id/btnRent1"
        android:layout_width="58dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"

        android:background="@null"
        android:text="Rent"
        android:textAlignment="center"

        />

    <Button
        android:id="@+id/btnSell1"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:background="@null"
        android:text="Sell" />

</LinearLayout>


                </RelativeLayout>

                <include
                    android:id="@+id/toolbar"
                    layout="@layout/toolbar_user_pro" />

            </com.google.android.material.appbar.CollapsingToolbarLayout>

        </com.google.android.material.appbar.AppBarLayout>

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true"
            android:layout_marginTop="-75dp"
            android:layout_marginLeft="0dp"
            android:layout_marginRight="0dp"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@null"
            >




           <LinearLayout
               android:orientation="vertical"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:background="@null"
               >

               <LinearLayout
                   android:orientation="horizontal"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:layout_margin="5dp"
                   >

                   <ImageView
                       android:visibility="gone"

                       android:id="@+id/ivBachelor"
                       android:layout_width="35sp"
                       android:layout_height="35sp"
                       android:background="@drawable/cerclebackgroundpurple"
                       android:padding="4dp"
                       android:src="@drawable/men_sell" />

                   <TextView
                       android:visibility="gone"
                       android:id="@+id/tvBachelor"
                       android:layout_marginLeft="10dp"
                       android:layout_marginRight="10dp"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:text="@string/Bachelor"
                       android:textSize="20dp"
                       android:padding="5dp"

                       />

                   <Button

                       android:id="@+id/btnBachelor"
                       android:background="@null"
                       android:layout_width="wrap_content"
                       android:layout_height="27dp"
                       android:text="see more"
                       android:visibility="gone"
                       />
               </LinearLayout>
               <androidx.cardview.widget.CardView
                   android:clickable="false"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:layout_margin="5dp">

               <androidx.recyclerview.widget.RecyclerView
                   android:id="@+id/recyclerbachelor"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:orientation="horizontal"
                   app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                   />
               </androidx.cardview.widget.CardView>

           </LinearLayout>

            <androidx.cardview.widget.CardView
                android:clickable="false"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:id="@+id/ivAgent"
                        android:layout_width="35sp"
                        android:layout_height="35sp"
                        android:background="@drawable/cerclebackgroundpurple"
                        android:padding="4dp"
                        android:src="@drawable/men_sell"
                        android:visibility="gone"
                        />

                    <TextView
                        android:id="@+id/tvAgent"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Verified agent"
                        android:textSize="20dp"
                        android:padding="5dp"

                        />

                    <Button
                        android:id="@+id/btnAgent"
                        android:background="@null"
                        android:layout_width="wrap_content"
                        android:layout_height="27dp"
                        android:text="see more"
                        android:visibility="visible"
                        />
                </LinearLayout>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recyclerAgent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    />
            </LinearLayout>

            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:clickable="false"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:id="@+id/ivFamily"
                        android:layout_width="35sp"
                        android:layout_height="35sp"
                        android:background="@drawable/cerclebackgroundpink"
                        android:padding="4dp"
                        android:src="@drawable/iconsb_family"
                        android:visibility="gone"
                        />

                    <TextView
                        android:visibility="gone"

                        android:id="@+id/tvFamily"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/sFamily"
                        android:textSize="20dp"
                        android:padding="5dp"
                        />

                    <Button
                        android:id="@+id/btnFamily"
                        android:background="@null"
                        android:layout_width="wrap_content"
                        android:layout_height="27dp"
                        android:text="see more"
                        android:visibility="gone"
                        />
                </LinearLayout>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recyclerFamily"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    />
            </LinearLayout>

            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:clickable="false"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:visibility="gone"
                        android:id="@+id/ivGirls"
                        android:layout_width="35sp"
                        android:layout_height="35sp"
                        android:background="@drawable/cerclebackgroundyello"
                        android:padding="4dp"
                        android:src="@drawable/icons_girl_b" />

                    <TextView
                        android:visibility="gone"
                        android:id="@+id/tvGirls"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/Girls"
                        android:textSize="20dp"
                        android:padding="5dp"

                        />

                    <Button
                        android:id="@+id/btnGirls"
                        android:background="@null"
                        android:layout_width="wrap_content"
                        android:layout_height="27dp"
                        android:text="see more"
                        android:visibility="gone"
                        />
                </LinearLayout>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recyclerGirls"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    />
            </LinearLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:clickable="false"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:visibility="gone"

                        android:id="@+id/ivStudent"
                        android:layout_width="35sp"
                        android:layout_height="35sp"
                        android:background="@drawable/cerclebackgroundgreen"
                        android:padding="4dp"
                        android:src="@drawable/icons_students_s" />

                    <TextView
                        android:visibility="gone"

                        android:id="@+id/tvStudent"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/sStudent"
                        android:textSize="20dp"
                        android:padding="5dp"

                        />

                    <Button
                        android:id="@+id/btnStudent"
                        android:background="@null"
                        android:layout_width="wrap_content"
                        android:layout_height="27dp"
                        android:text="see more"
                        android:visibility="gone"
                        />
                </LinearLayout>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recyclerStudent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    />
            </LinearLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:clickable="false"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:visibility="gone"

                        android:id="@+id/ivWomen"
                        android:layout_width="35sp"
                        android:layout_height="35sp"
                        android:background="@drawable/cerclebackgroundred"
                        android:padding="4dp"
                        android:src="@drawable/working_women" />

                    <TextView
                        android:visibility="gone"

                        android:id="@+id/tvWomen"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/Woment"
                        android:textSize="20dp"
                        android:padding="5dp"

                        />

                    <Button
                        android:id="@+id/btnWomen"
                        android:background="@null"
                        android:layout_width="wrap_content"
                        android:layout_height="27dp"
                        android:text="see more"
                        android:visibility="gone"
                        />
                </LinearLayout>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recyclerWomen"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    />
            </LinearLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:clickable="false"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:visibility="gone"

                        android:id="@+id/ivOthers"
                        android:layout_width="35sp"
                        android:layout_height="35sp"
                        android:background="@drawable/cerclebackgroundpurple"
                        android:padding="4dp"
                        android:src="@drawable/icons_building" />

                    <TextView
                        android:visibility="gone"

                        android:id="@+id/tvOthers"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/Others"
                        android:textSize="20dp"
                        android:padding="5dp"

                        />

                    <Button
                        android:id="@+id/btnOthers"
                        android:background="@null"
                        android:layout_width="wrap_content"
                        android:layout_height="27dp"
                        android:text="see more"
                        android:visibility="gone"
                        />
                </LinearLayout>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recyclerOthers"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    />
            </LinearLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:clickable="false"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp">
           

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerViewSell"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                />
            </androidx.cardview.widget.CardView>


        </LinearLayout>


        </androidx.core.widget.NestedScrollView>




    </androidx.coordinatorlayout.widget.CoordinatorLayout>



</androidx.drawerlayout.widget.DrawerLayout>